- title "Décisions"

%table
  %tr
  - for decision in @decisions
    %tr
      %td= link_to decision.name, decision
      %td= link_to 'Modifier', edit_decision_path(decision)
      %td= link_to 'Détruire', decision, :confirm => 'Are you sure?', :method => :delete

%p= link_to "Nouvelle Décision", new_decision_path
