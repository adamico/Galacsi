- title "Decisions"

%table
  %tr
    %th Name
    %th Description
  - for decision in @decisions
    %tr
      %td= h decision.name
      %td= h decision.description
      %td= link_to 'Show', decision
      %td= link_to 'Edit', edit_decision_path(decision)
      %td= link_to 'Destroy', decision, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Decision", new_decision_path
