- title "#{@dci.name.humanize}"
- unless @fiche.distinction_type.blank?
  %h2= "(#{@fiche.distinction_type} : #{@fiche.distinction})"

#fiche_actions
  #modify
    %table
      %tr
        %td
          - if permitted_to? :edit, @fiche
            - link_to edit_dci_fiche_path(@fiche.dci, @fiche) do
              %img{:src => "/images/Edit.png", :width => "32", :alt => "Modifier"}
        %td
          - if permitted_to? :destroy, @fiche
            - link_to([@fiche.dci, @fiche], {:confirm => 'Etes-vous sûr ?', :method => :delete}) do
              %img{:src => "/images/Delete.png", :width => "32", :alt => "Détruire"}
      %tr
        %td
          %small="Modifier" if permitted_to? :edit, @fiche
        %td
          %small="Détruire" if permitted_to? :destroy, @fiche

- validation_state_and_actions

%p
  %strong Décision :
  = " #{@fiche.decision.name}" rescue " A renseigner"

- if permitted_to?(:initialiser, :fiches)
  .comment
    %strong Commentaire :
    = @fiche.try(:commentaire)

%p
  %strong Suivi souhaité :
  = " #{@fiche.suivi}" rescue " A renseigner"

%hr
#nav_bar
  %p
    = link_to "Toutes les fiches pour #{@fiche.dci.name}", dci_path(@fiche.dci)
    |
    = link_to "Accueil", root_path

