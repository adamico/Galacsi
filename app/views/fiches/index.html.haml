- title "Liste complète des fiches"

%h2 Filtrer par:
- form_for @search, :url => fiches_path, :html => {:method => :get} do |f|
  = f.label :state_eq, "Etat de validation"
  = f.select :state_eq, Fiche::STATES, :include_blank => true 
  = f.submit "OK"

- if !@fiches.empty?
  %table#list
    %thead
      %tr
        %th.time= order @search, :by => :updated_at, :as => "Dernière modif."
        %th= order @search, :by => :dci_stripped_name, :as => "DCI"
        %th Distinction
        %th Validation
        %th Créateur
        %th &nbsp;
    %tbody
      - @fiches.each do |fiche|
        %tr{:class => "#{cycle('odd', 'even')}"}
          %td.time= l fiche.updated_at.to_date
          %td= h fiche.dci_name
          %td= h fiche.full_distinction
          %td{:class => "#{fiche.state}"}= h fiche.state.humanize
          %td= h fiche.createur if fiche.user
          %td
            - actions_buttons(fiche)
  %p= link_to "Exporter en fichier .csv", fiches_path(:format => :csv,
      :search => params[:search])

- else
  %h3 Pas de résultats
