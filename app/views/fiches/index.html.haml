- title "Liste complète des fiches"

%h2 Filtrer par:
- form_for @search do |f|
  = f.label :state_is, "Etat de validation"
  = f.select :state_is, Fiche.aasm_states_for_select, :include_blank => true 
  = f.submit "OK"

- if !@fiches.empty?
  %table#fiches
    %thead
      %th DCI
      %th Distinction
      %th Validation
      %th Créateur
      %th Actions
    - @fiches.each do |fiche|
      %tr{:class => "#{cycle('odd', 'even')}"}
        %td= h fiche.dci.name
        %td= h fiche.full_distinction
        %td= h fiche.state.humanize
        %td= h fiche.createur if fiche.user
        %td
          - actions_buttons(fiche)

- else
  %h3 Pas de résultats
