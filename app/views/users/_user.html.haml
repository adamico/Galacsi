= simple_form_for user, html: { role: 'form' } do |f|
  = f.input :username, label: "Nom d'utilisateur"
  = f.input :email
  = f.input :password,
    label: (f.object.new_record? ? "Mot de passe" : "Changer le mot de passe")
  = f.input :password_confirmation, label: "Confirmer le mot de passe"

  = f.input :role, collection: User::ROLES

  .pull-right
    = link_to 'Annuler', :back, 'data-confirm': t('confirm'), class: 'btn btn-link'
    = f.button :submit
