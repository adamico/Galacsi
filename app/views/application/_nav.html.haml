%nav.navbar.navbar-custom.navbar-static-top
  .container
    .navbar-header
      = button_tag type: 'button', class: 'navbar-toggle collapsed',
        data: { toggle: 'collapse', target: '#galacsi-navbar-collapse'} do
        %span.sr-only Menu
        - 3.times do
          %span.icon-bar
      = link_to 'Accueil', root_path, class: 'navbar-brand'

    .collapse.navbar-collapse#galacsi-navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to "Recherche", search_path
        - if can? :create, Dci
          %li
            = link_to "DCI", dcis_path
            %span.add_record= link_to "+", new_dci_path
        - if can? :create, Fiche
          %li= link_to "Fiches", fiches_path
        %li
          = link_to "Classes", classe_therapeutiques_path
          - if can? :create, ClasseTherapeutique
            %span.add_record= link_to "+", new_classe_therapeutique_path
        %li= link_to "Spécialités", specialites_path
        - if can? :read, User
          %li= link_to "Demandes", demandes_path
          %li.dropdown
            = link_to "#", class: 'dropdown-toggle', 'data-toggle': 'dropdown',
              role: 'button', 'aria-expanded': false do
              Admin
              %span.caret

            %ul.dropdown-menu{role: 'menu'}
              %li= link_to "Décisions", decisions_path
              %li= link_to "Distinctions", distinctions_path
              %li= link_to "Utilisateurs", users_path
              %li= link_to "Sources", sources_path
              %li= link_to "Pages", pages_path


        %li.dropdown
          = link_to "#", class: "dropdown-toggle", 'data-toggle': 'dropdown',
            role: 'button', 'aria-expanded': false do
            A propos
            %span.caret
          %ul.dropdown-menu{role: 'menu'}
            - @pages_without_home.each do |page|
              %li= link_to page.title_or_permalink, home_path(page.permalink)
