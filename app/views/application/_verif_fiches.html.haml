- if expired_fiches.count > 0 && can?(:valider, Fiche)
  %strong= "Attention vous avez #{pluralize(expired_fiches.count, 'fiche')} à vérifier : "
  %ul.list-unstyled
    - expired_fiches.each do |fiche|
      %li
        - if fiche.distinction_id?
          = link_to "#{fiche.dci_name.humanize} - #{fiche.full_distinction}", dci_fiche_path(fiche.dci, fiche)
          = "(dernière validation le #{l(fiche.published_at)})" if fiche.published_at?
        - else
          = link_to "#{fiche.dci_name.humanize}", dci_fiche_path(fiche.dci, fiche)
